<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:tag="background">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:tag="delete"
        android:scaleX="0.5"
        android:background="@drawable/count_delete"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:tag="line"
        android:text="項次" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:tag="pname"
        android:text="品名" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:tag="pcode"
        android:text="商品編號" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:tag="color"
        android:text="顏色" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:tag="size"
        android:text="尺寸" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:tag="fprice"
        android:text="定價" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:tag="price"
        android:text="售價" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:tag="samount" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:tag="sum"
        android:text="小計" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/home_gray2" />

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:tag="note"
        android:text="備註"
        android:background="@drawable/count_note"
        android:textColor="@color/white"/>


</LinearLayout>