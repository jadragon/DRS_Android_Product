<?xml version="1.0" encoding="utf-8"?>
<library.Component.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_gray2">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home_accmanage_img"
        android:tag="photo" />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/album_white70"
        android:tag="cover" />

    <CheckBox
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right|top"
        android:background="@drawable/checkbox_red"
        android:button="@null"
        android:tag="checkbox"
        android:layout_margin="10dp"/>
</library.Component.SquareFrameLayout>