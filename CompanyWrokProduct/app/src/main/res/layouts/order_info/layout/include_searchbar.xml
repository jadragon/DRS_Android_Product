<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/include_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/default_gray"
        android:orientation="vertical"
        android:paddingRight="10dp">
        <library.Component.TextImageView
            android:id="@+id/include_search_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="劦譽商城"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:textColor="@color/red"
            android:background="@drawable/searchbar_bg"
            android:drawableLeft="@mipmap/search_red"
            app:drawablefillHeight="true"
            app:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>
</LinearLayout>


