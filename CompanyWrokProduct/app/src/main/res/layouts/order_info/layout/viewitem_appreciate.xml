<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <ImageView
        android:id="@+id/appreciate_srars_img"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/ship_post_office" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/appreciate_srars_pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="標題"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appreciate_srars_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顏色"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/appreciate_srars_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="規格"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>



        <TextView
            android:id="@+id/appreciate_srars_comdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="時間"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>


        <LinearLayout
            android:id="@+id/appreciate_srars_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:longClickable="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/appreciate_srar1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/star_off"/>
            <ImageView
                android:id="@+id/appreciate_srar2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/star_off"/>
            <ImageView
                android:id="@+id/appreciate_srar3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/star_off"/>
            <ImageView
                android:id="@+id/appreciate_srar4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/star_off"/>
            <ImageView
                android:id="@+id/appreciate_srar5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/star_off"/>
        </LinearLayout>

    <EditText
        android:id="@+id/appreciate_srars_comment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/edittext_background1"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:hint="請輸入評價內容,30個字以內"
        android:gravity="top"/>
</LinearLayout>
