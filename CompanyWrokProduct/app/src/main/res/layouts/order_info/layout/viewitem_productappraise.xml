<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/productappraise_comscore"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="5"
        android:textColor="@color/red"
        android:textSize="60sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/productappraise_mimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/product" />

            <TextView
                android:id="@+id/productappraise_mname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Alex"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/productappraise_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="是正品，但質感跟品質感覺有點不太好喔，下次要多注意"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/productappraise_comdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="2018-04-01" />

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/productappraise_seller_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/navajowhite"
        android:padding="10dp">
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="商家回應"
                android:textColor="@color/orange"/>
            <TextView
                android:id="@+id/productappraise_recomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="2018-04-01" />
            <TextView
                android:id="@+id/productappraise_recomdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="2018-04-01" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
