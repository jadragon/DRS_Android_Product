<?xml version="1.0" encoding="utf-8"?>
<!--在Android中，規定以160dpi（即螢幕解析度為320x480）為基準：1dp=1px-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/shopcart_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/product"
        android:layout_weight="3"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7"
        android:padding="10dp">
        <TextView
            android:id="@+id/shopcart_txt_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="可得清"/>
        <TextView
            android:id="@+id/shopcart_txt_sprice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="$100"
            android:gravity="bottom"
            android:textColor="@color/colorRed"/>
        <TextView
            android:id="@+id/shopcart_txt_total"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="商品數量:"/>
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="款式"
        android:gravity="center_vertical"
        android:padding="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_cart_review"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/shopcart_btn_decrease"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/shopcart_txt_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/shopcart_btn_increase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="立即結帳" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>