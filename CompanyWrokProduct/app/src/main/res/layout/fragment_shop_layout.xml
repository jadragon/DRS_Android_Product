<?xml version="1.0" encoding="utf-8"?><!--在Android中，規定以160dpi（即螢幕解析度為320x480）為基準：1dp=1px-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/default_gray">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/searchbar_bg"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:src="@drawable/search_red"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="劦譽商城"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/red"/>
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/cart_red"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>

   <android.support.v4.view.ViewPager
       android:id="@+id/shop_viewpager"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="10"
       android:elevation="20dp"
       >
       <android.support.design.widget.TabLayout
           android:id="@+id/shop_header_tablayout"
           android:layout_width="match_parent"
           android:layout_height="43dp"
           android:background="@color/white"
           android:elevation="20dp"
           app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
           />

   </android.support.v4.view.ViewPager>
</LinearLayout>