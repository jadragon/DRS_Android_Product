<?xml version="1.0" encoding="utf-8"?>
<!--在Android中，規定以160dpi（即螢幕解析度為320x480）為基準：1dp=1px-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="@color/default_gray">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:background="@drawable/searchbar_bg"
    android:layout_marginLeft="12dp"
    android:layout_gravity="center_vertical">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/search_red"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="劦譽商城"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/red"/>
</LinearLayout>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/cart_red"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
       android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"/>

</LinearLayout>
<library.Component.MySwipeRefreshLayout
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="11">
      <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/testbanner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#df3d1c"
                android:text="熱門搜尋"
                android:layout_margin="10dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/reView"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#df3d1c"
                android:text="分類"
                android:layout_margin="10dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/reView2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#df3d1c"
                android:text="品牌"
                android:layout_margin="10dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/reView3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"/>

        </LinearLayout>
    </ScrollView>
</library.Component.MySwipeRefreshLayout>
    </LinearLayout>