<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/viewitem_cart_content_checkbox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:button="@null"
        android:background="@drawable/checkbox"
        android:padding="5dp"/>
    <ImageView
        android:id="@+id/viewitem_cart_content_img"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:src="@drawable/ship_post_office" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewitem_cart_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="標題"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewitem_cart_content_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顏色"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewitem_cart_content_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="規格"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="-" />

            <TextView
                android:layout_weight="5"
                android:id="@+id/viewitem_cart_content_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="數量"
                android:gravity="center"/>

            <Button
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+" />
        </LinearLayout>

        <TextView
            android:id="@+id/viewitem_cart_content_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$100" />

    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/gray"/>
</LinearLayout>
