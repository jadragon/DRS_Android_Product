<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/viewitem_count_content_img"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/ship_post_office" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/viewitem_count_content_title"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="標題"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="規格:"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewitem_count_content_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顏色"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewitem_count_content_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="規格"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            android:id="@+id/viewitem_count_content_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="$100"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/viewitem_count_content_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="X15"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="30dp"/>
        </FrameLayout>


    </LinearLayout>
</LinearLayout>
