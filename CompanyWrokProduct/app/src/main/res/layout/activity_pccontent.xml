<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PcContentActivity">

    <include
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/spacer_medium"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <include
                        layout="@layout/viewitem_homeheader"
                        android:layout_width="match_parent"
                        android:layout_height="400dp" />

                    <TextView
                        android:id="@+id/pccontent_txt_descs"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical">



                            <library.Component.AutoHorizontalTextView
                                android:id="@+id/pccontent_txt_rprice"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="bottom"
                                android:text="$100"
                                android:textSize="15sp"
                                android:translationY="10dp"/>

                            <library.Component.AutoHorizontalTextView
                                android:id="@+id/pccontent_txt_rsprice"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:gravity="bottom"
                                android:text="$100"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pccontent_img_star"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:scaleType="fitEnd"
                            android:src="@drawable/star5_2" />

                        <ImageView
                            android:id="@+id/pccontent_heart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitEnd"
                            android:src="@drawable/heart_off" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ship_ways"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <library.Component.AutoHorizontalTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="運送方式"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:scaleType="fitEnd"
                            android:src="@drawable/ship_seven_elaven" />

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:scaleType="fitEnd"
                            android:src="@drawable/ship_all_family" />

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:scaleType="fitEnd"
                            android:src="@drawable/ship_hi_life" />

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:scaleType="fitEnd"
                            android:src="@drawable/ship_black_cat" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:rotation="180"
                        android:src="@drawable/ic_chevron_left_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <library.Component.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ship_seven_elaven"
                            app:border_color="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:text="我是賣家，賣家是我"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center_vertical|right">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/chaw_chaw"
                            android:text="喬喬"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/goto_buy"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:text="去看賣場"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/pccontent_tablayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:overScrollMode="never"
                        app:tabGravity="fill"
                        app:tabMode="fixed" />

                    <library.Component.MyViewPager
                        android:id="@+id/pccontent_web_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="500dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/white">

            <ImageView
                android:id="@+id/pccontent_btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:src="@drawable/home_red" />

            <Button
                android:id="@+id/pccontent_btn_addshopcart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:background="@drawable/arcangle_button_orange"
                android:text="加入購物車"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/pccontent_btn_buynow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:background="@drawable/arcangle_button_red"
                android:text="立即結帳"
                android:textColor="@color/white" />

        </LinearLayout>

        <View
            android:id="@+id/enable_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#64000000"
            android:visibility="invisible" />

    </FrameLayout>
</LinearLayout>