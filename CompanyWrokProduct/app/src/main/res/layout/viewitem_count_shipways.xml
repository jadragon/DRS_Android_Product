<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:orientation="vertical"
    android:background="@color/default_gray">
    <LinearLayout
        android:id="@+id/viewitem_count_shipways_goto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="運送方式"
                android:textSize="18sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/viewitem_count_shipways_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7-11"
                android:gravity="right|center_vertical"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/viewitem_count_shipways_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="$30"
                android:gravity="right|center_vertical"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:rotation="180" />
        </LinearLayout>
        <TextView
            android:id="@+id/viewitem_count_shipways_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="桃園市大溪區人和路案段"
            android:gravity="right"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/viewitem_count_shipways_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="李大明+886 09112222333"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gainsboro"
        android:paddingLeft="10dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="備註:"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/viewitem_count_shipways_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="請輸入備註"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:inputType="text"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>
</LinearLayout>
