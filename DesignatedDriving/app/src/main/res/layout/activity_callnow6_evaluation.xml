<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CallNow5_CountActivity">

    <include
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/target_circle"
            android:focusable="true" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/menu_header1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="張先生"
                android:textColor="@color/royal_blue"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/appreciate_srars_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:longClickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appreciate_srar1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_off" />

        <ImageView
            android:id="@+id/appreciate_srar2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_off" />

        <ImageView
            android:id="@+id/appreciate_srar3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_off" />

        <ImageView
            android:id="@+id/appreciate_srar4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_off" />

        <ImageView
            android:id="@+id/appreciate_srar5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_off" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="請給此客戶評價"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_shawdow"
        android:gravity="top"
        android:hint="請輸入內容"
        android:padding="10dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_green2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="送出"
        android:textColor="@color/royal_blue"
        android:textSize="15sp" />
</LinearLayout>