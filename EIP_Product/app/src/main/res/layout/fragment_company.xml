<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/company_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2018/10/09(ä¸‰)"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/company_title"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/company_prepage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/commpany_prepage"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/company_nextpage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/company_nextpage"
            android:textSize="20sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/company_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TW"
            android:background="@color/light_green"/>

        <Button
            android:id="@+id/company_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CN"
            android:background="@color/gray_purple"/>

        <Button
            android:id="@+id/company_vn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VN"
            android:background="@color/light_orange"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/company_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="3" />
</LinearLayout>
